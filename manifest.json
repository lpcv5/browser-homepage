{
  "manifest_version": 3,
  "name": "智能浏览器主页",
  "version": "1.0.0",
  "description": "一个美观实用的浏览器新标签页，支持多搜索引擎、智能取色和精美背景",
  "author": "pclinger",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "favicon"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    },
    "default_title": "智能浏览器主页"
  }
}